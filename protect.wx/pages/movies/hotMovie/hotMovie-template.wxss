.hotMovie-container{
  height: 300rpx;
  width: 95%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background-color: Gainsboro;
  margin-bottom: 10px;
  /* border-bottom: 2rpx solid #999; */
}
.hotImg{
  height: 280rpx;
  width: 28%;
}
.hot-img{
  width: 100%;
  height: 100%;
}
.hotInfo{
  display: flex;
  height: 280rpx;
  width: 40%;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.hotTitle{
  width: 96%;
  height: 22%;
  display: flex;
  align-items: left;
}
.title{
  height: 100%;
  font-size: 12px;
  text-align: left;
  line-height: 26px;
  margin-right: 10rpx;
}
.if3d{
  height: 100%;
  font-size: 10px;
  text-align: center;
  line-height: 26px;
  background-color: #3ae;
  box-sizing: border-box;
  border-radius: 10rpx;
  padding: 0 3px;
  color: #fff;
}
.hotType{
  width: 96%;
  height: 22%;
  font-size: 24rpx;
  text-align: left;
  box-sizing: border-box;
  line-height: 26px;
  color: #666;
}
.hotActor{
  width: 96%;
  height: 22%;
  font-size: 24rpx;
  text-align: left;
  box-sizing: border-box;
  line-height: 26px;
  color: #666;
}
.hotNum{
  width: 96%;
  height: 22%;
  font-size: 24rpx;
  text-align: left;
  box-sizing: border-box;
  line-height: 26px;
  color: #666;
}
.hotBuy{
  height: 280rpx;
  width: 28%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.hot-point{
  height: 30%;
  width: 80%;
  color: #ff5000;
  text-align: right;
}
.hot-buy{
  height: 26%;
  width: 76%;
  background-color: #ff5000;
  border-radius: 5px;
  text-align: center;
  font-size: 36rpx;
  line-height: 70rpx;
  color: #fff;
}